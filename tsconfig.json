{
	"extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "lib": ["ES2021", "DOM"],

		"inlineSourceMap": true,
		"inlineSources": true,

        "allowJs": false,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
    },
    "include": [
        "src",
    ],
}
